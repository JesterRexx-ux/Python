import re
import reprlib

RE_WORD=re.compile('\w')

class Sentence:
    def __iter__(self,text):
        self.text=text
        self.words=RE_WORD.findall(next)

    def __repr__(self):
        return 'Sentence(%s)' %reprlib.repr(self.text)

    def __iter__(self):
        for word in self.words:
            yield word
        return
        
        
    
   #Done
   
   
   
